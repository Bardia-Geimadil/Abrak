<UserControl x:Class="Abrak.View.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Abrak.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="API key" Foreground="White" FontSize="30" FontFamily="chilanka" Margin="15"/>
            <TextBox Width="auto" Margin="15" Height="auto"
                     FontSize="20"
                     FontFamily="chilanka"
                     Padding="5"
                     Text="{Binding API_Key}"
                     />
        </StackPanel>
    </Grid>
</UserControl>
